echo Compiling
echo ---------
avr-gcc -funsigned-char -funsigned-bitfields -fpack-struct -fshort-enums -L /sw/avr/lib/ -c -Os -Wall -Wa,-ahlms=main.lst -mmcu=atmega8 -I /sw/avr/include/  main.c -o main.o
avr-gcc -funsigned-char -funsigned-bitfields -fpack-struct -fshort-enums -L /sw/avr/lib/ -c -Os -Wall -Wa,-ahlms=main.lst -mmcu=atmega8 -I /sw/avr/include/  uart.c -o uart.o
avr-gcc -L /sw/avr/lib/ uart.o main.o -Wl,-Map=lcd.map,--cref -mmcu=atmega8 -o main.elf
avr-strip main.elf
avr-objcopy -S -O srec main.elf main.rom
avr-objcopy -j .eeprom --set-section-flags=.eeprom="alloc,load" -O srec main.elf main.eep
echo Ready
echo
echo Size
echo ----
avr-size uart.o main.o main.elf main.eep
rm *.elf *.o *.map
